<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:showIn="@layout/activity_hangman"
                tools:context=".HangManActivityFragment"
              android:orientation="vertical"
              android:id="@+id/quizLinearLayout">

   <ImageView
       android:id="@+id/manImageView"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_gravity="center"
       android:layout_marginLeft="@dimen/activity_horizontal_margin"
       android:layout_marginRight="@dimen/activity_horizontal_margin"
       android:layout_marginBottom="@dimen/spacing"
       android:layout_weight="1"
       android:adjustViewBounds="true"
       android:contentDescription="@string/image_description"
       android:scaleType="fitCenter" />

   <TextView
       android:id="@+id/guessWordTextView"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"
       android:text="Guess the Word"
       android:textAppearance="?android:attr/textAppearanceMedium"
       android:textSize="24sp" />

   <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/row1LinearLayout">

      <TextView
          android:id="@+id/letter1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="?"
          android:textAlignment="center"
          android:textSize="24sp" />

      <TextView
          android:id="@+id/letter2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="?"
          android:textAlignment="center"
          android:textSize="24sp" />

      <TextView
          android:id="@+id/letter3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="?"
          android:textAlignment="center"
          android:textSize="24sp" />

      <TextView
          android:id="@+id/letter4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="?"
          android:textAlignment="center"
          android:textSize="24sp" />

      <TextView
          android:id="@+id/letter5"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="?"
          android:textAlignment="center"
          android:textSize="24sp" />
   </LinearLayout>

   <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/row2LinearLayout">

      <EditText
          android:id="@+id/guessLetter"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:ems="10"
          android:inputType="textPersonName" />

      <Button
          android:id="@+id/answer"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Guess! " />

      <Button
          android:id="@+id/changeGame"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Switch Game" />
   </LinearLayout>

</LinearLayout>
