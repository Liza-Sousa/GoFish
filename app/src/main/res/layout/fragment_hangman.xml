<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quizLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="hnls.app.Ultimate.HangManActivityFragment"
    tools:showIn="@layout/activity_hangman">

   <ImageView
       android:id="@+id/manImageView"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_gravity="center"
       android:layout_marginLeft="@dimen/activity_horizontal_margin"
       android:layout_marginRight="@dimen/activity_horizontal_margin"
       android:layout_marginBottom="@dimen/spacing"
       android:layout_weight="1"
       android:adjustViewBounds="true"
       android:contentDescription="@string/image_description"
       android:scaleType="fitCenter" />

   <TextView
       android:id="@+id/guessWordTextView"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"
       android:text="Guess the Word"
       android:textAppearance="?android:attr/textAppearanceMedium"
       android:textSize="24sp" />

   <LinearLayout
       android:id="@+id/row1LinearLayout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">

      <TextView
          android:id="@+id/letter1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="?"
          android:textAlignment="center"
          android:textSize="24sp" />

      <TextView
          android:id="@+id/letter2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="?"
          android:textAlignment="center"
          android:textSize="24sp" />

      <TextView
          android:id="@+id/letter3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="?"
          android:textAlignment="center"
          android:textSize="24sp" />

      <TextView
          android:id="@+id/letter4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="?"
          android:textAlignment="center"
          android:textSize="24sp" />

      <TextView
          android:id="@+id/letter5"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="?"
          android:textAlignment="center"
          android:textSize="24sp" />
   </LinearLayout>

   <LinearLayout
       android:id="@+id/row2LinearLayout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">

      <EditText
          android:id="@+id/guessLetter"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:ems="10"
          android:inputType="textPersonName" />

      <Button
          android:id="@+id/answer"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Guess! " />

   </LinearLayout>

</LinearLayout>
